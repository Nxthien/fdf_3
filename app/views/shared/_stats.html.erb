<% @user ||= current_user %>
<div class="stats td-stats">
  <div class="hvr-glow col-md-5 col-md-offset-1 stats-1">
    <%= link_to relationships_path user_id: @user, relationship: "following" do %>
      <strong id="following" class="stat">
        <%= @user.following.count %>
      </strong>
      <p><%= t "follow.following" %></p>
    <% end %>
  </div>
  <div  class="hvr-glow col-md-5">
    <%= link_to relationships_path user_id: @user, relationship: "followers" do %>
      <strong id="followers" class="stat">
        <%= @user.followers.count %>
      </strong>
      <p><%= t "follow.follower" %></p>
    <% end %>
  </div>
</div>
