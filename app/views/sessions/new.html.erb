<% provide :title, t("login.title") %>
<div class="container-fluid td-login">
  <h1><%= t "login.title" %></h1>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path, class: "login"  do |f|%>

      <p>
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </p>

      <p>
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </p>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "login.remember" %></span>
      <% end %>

      <p class="login-submit">
        <%= f.submit t("login.title"), class: "btn btn-primary" %>
      </p>
    <% end %>
    <p><%= t "login.newuser" %><%= link_to t("login.signup"), signup_path %></p>
  </div>
</div>
