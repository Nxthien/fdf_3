<% provide :title, t("edit.title") %>
<h1><%= t "edit.order" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @order_detail do |f| %>

      <%= f.label :quantity %>
      <%= f.number_field :quantity, class: "form-control", min: 1 %>

      <%= f.hidden_field :product_id, product_id: @order_detail[:product_id] %>

      <%= f.submit t("edit.button"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
